	"provisioners": [
		{
			"type": "file",
			"source": "./scripts/",
			"destination": "~"
		},
		{
			"type": "shell",
			"inline": [
				"sleep 30",
				"sudo chmod +x ~/xlt-home/*.sh",
				"sudo chmod +x ~/init.d/*",
				"sudo -E -S ~/xlt-home/setup-image.sh  {{user `xlt-version`}}"
			]
		}
	]
