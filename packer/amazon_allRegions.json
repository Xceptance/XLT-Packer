{
  "variables": {
    "region": "eu-west-1",
    "aws_base_ami": "ami-0181f8d9b6f098ec4",
    "xlt_version": "4.12.2",
    "image_name": "XLT-Image-{{timestamp}}",
    "dest_regions": "ap-northeast-1,ap-southeast-1,ap-southeast-2,eu-central-1,sa-east-1,us-east-1,us-east-2,us-west-1,us-west-2",
    "launch_permission" : "",
    "aws_access_key": "<YOUR_AWS_ACCESS_KEY>",
    "aws_secret_key": "<YOUR_AWS_SECRET_KEY>",
    "ssh_keypair_name": "<SSH_KEY_PAIR_NAME>",
    "ssh_private_key_file": "<PATH_TO_SSH_PRIVATE_KEY>"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `region`}}",
      "source_ami": "{{user `aws_base_ami`}}",
      "instance_type": "t1.micro",
      "ssh_username": "ubuntu",
      "ami_name": "{{user `image_name` | clean_ami_name}}",
      "ami_regions": "{{user `dest_regions`}}",
      "ami_groups": "{{user `launch_permission`}}",
      "ssh_keypair_name": "{{user `ssh_keypair_name`}}",
      "ssh_private_key_file": "{{user `ssh_private_key_file`}}",
      "ena_support": true,
      "launch_block_device_mappings": [
        {
          "delete_on_termination": true,
          "volume_size": 200,
          "device_name": "/dev/sda1",
          "volume_type": "gp2"
        }
      ],
      "tags": {
          "Name": "XLT {{user `xlt_version`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "./scripts/common/",
      "destination": "~"
    },
    {
      "type": "file",
      "source": "./scripts/aws/",
      "destination": "~"
    },
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "sudo chmod +x ~/xlt-home/*.sh",
        "sudo chmod +x ~/init.d/*",
        "sudo -E -S ~/xlt-home/setup-image.sh  {{user `xlt_version`}}"
      ]
    }
  ]
}
