{
  "variables": {
    "region": "eu-west-1",
    "xlt_version": "6.2.5",
    "root_volume_size": "200",
    "image_name": "XLT-Image-{{timestamp}}",
    "launch_permission" : "",
    "aws_access_key": "<YOUR_AWS_ACCESS_KEY>",
    "aws_secret_key": "<YOUR_AWS_SECRET_KEY>",
    "aws_subnet_id": "",
    "ssh_keypair_name": "",
    "ssh_private_key_file": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `region`}}",
      "subnet_id": "{{user `aws_subnet_id`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "debian-11-arm64-*",
          "root-device-type": "ebs"
        },
        "owners": ["136693071363"],
        "most_recent": true
      },
      "instance_type": "c6g.medium",
      "ssh_username": "admin",
      "ami_name": "{{user `image_name` | clean_resource_name}}",
      "ami_groups": "{{user `launch_permission`}}",
      "ssh_keypair_name": "{{user `ssh_keypair_name`}}",
      "ssh_private_key_file": "{{user `ssh_private_key_file`}}",
      "ena_support": true,
      "launch_block_device_mappings": [
        {
          "delete_on_termination": true,
          "volume_size": "{{user `root_volume_size`}}",
          "device_name": "/dev/xvda",
          "volume_type": "gp2"
        }
      ],
      "tags": {
        "Name": "XLT {{user `xlt_version`}} (arm64)"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "./scripts/common/",
      "destination": "~"
    },
    {
      "type": "file",
      "source": "./scripts/aws/",
      "destination": "~"
    },
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "sudo chmod +x ~/xlt-home/*.sh",
        "sudo -E -S ~/xlt-home/setup-image.sh  {{user `xlt_version`}} arm64"
      ]
    }
  ]
}
