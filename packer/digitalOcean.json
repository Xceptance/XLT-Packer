{
  "variables": {
    "region": "nyc1",
    "xlt-version": "LATEST",
    "image_name": "XLT-Image-{{timestamp}}",
    "api_token": "<YOUR_DIGITAL_OCEAN_API_TOKEN>",
    "ssh_private_key": "<PATH_TO_YOUR_PRIVATE_KEY>"
  },
  "builders": [
    {
      "type": "digitalocean",
      "ssh_username": "root",
      "api_token": "{{user `api_token`}}",
      "image": "ubuntu-16-04-x64",
      "region": "{{user `region`}}",
      "size": "512mb",
      "snapshot_name": "{{user `image_name`}}",
      "snapshot_regions": ["nyc1"]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "./scripts/common/",
      "destination": "~"
    },
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "sudo chmod +x ~/xlt-home/*.sh",
        "sudo chmod +x ~/init.d/*",
        "sudo -E -S ~/xlt-home/setup-image.sh  {{user `xlt-version`}}"
      ]
    }
  ]
}
