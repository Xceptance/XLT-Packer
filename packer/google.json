{
  "variables": {
    "zone": "us-central1-a",
    "account_file": "<PATH_TO_YOUR_ACCOUNT_JSON_FILE>",
    "project": "<PROJECT_ID>",
    "xlt_version": "6.2.5",
    "image_version": "6-2-5",
    "image_family": "6-x"
  },
  "builders": [
    {
      "type": "googlecompute",
      "account_file": "{{user `account_file`}}",
      "project_id": "{{user `project`}}",
      "zone": "{{user `zone`}}",
      "source_image_family": "debian-11",
      "image_name": "xlt-{{user `image_version` | clean_resource_name}}-{{isotime \"v20060102\"}}",
      "image_family": "xlt-{{user `image_family`}}",
      "image_description": "Standard Debian 11 with XLT pre-installed.",
      "ssh_username": "admin"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "./scripts/common/",
      "destination": "~"
    },
    {
      "type": "file",
      "source": "./scripts/google/",
      "destination": "~"
    },
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "sudo chmod +x ~/xlt-home/*.sh",
        "sudo -E -S ~/xlt-home/setup-image.sh  {{user `xlt_version`}}"
      ]
    }
  ]
}
