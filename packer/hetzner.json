{
  "variables": {
    "location": "nbg1",
    "api_token": "<YOUR_API_TOKEN>",
    "xlt_version": "4.12.2",
    "image_version": "4-12-2",
    "label_xlt_version": "4-x"
  },
  "builders": [
    {
      "type": "hcloud",
      "token": "{{user `api_token`}}",
      "image": "ubuntu-18.04",
      "location": "{{user `location`}}",
      "server_type": "cx11",
      "ssh_username": "root",
      "snapshot_name": "xlt-{{user `image_version`}}-{{isotime \"v20060102\"}}",
      "snapshot_labels": { "xlt-version": "{{user `label_xlt_version`}}" }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "./scripts/common/",
      "destination": "~"
    },
    {
      "type": "file",
      "source": "./scripts/hetzner/",
      "destination": "~"
    },
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "sudo chmod +x ~/xlt-home/*.sh",
        "sudo -E -S ~/xlt-home/setup-image.sh  {{user `xlt_version`}} enableRootLogin"
      ]
    }
  ]
}
